@model Projeto.Presentation.Mvc.Models.AccountLoginModel


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Referência dos arquivos CSS do Bootstrap -->
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h3>Entrar</h3>


        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible
                        fade show" role="alert">
                <strong>@TempData["MensagemErro"]</strong>
                <button type="button" class="close"
                        data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }


        @using (Html.BeginForm())
        {
            <label>Nome do Usuário:</label> @Html.TextBoxFor(model => model.Nome,
            new
                {
                   @class = "form-control col-md-4",
                   @placeholder = "Digite aqui"
                })

            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
            <br />
            <label>Senha de Acesso:</label> @Html.PasswordFor(model => model.Senha,
            new
                {
                    @class = "form-control col-md-4",
                    @placeholder = "Digite aqui"
                })

            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Senha)
            </span>
            <br />
            <input type="submit" class="btn btn-sm btn-dark"
                   value="Acessar Sistema" />
            <a href="/Account/Registro" class="btn btn-sm btn-secondary">
                Criar Conta de Usuário
            </a>
        }
    </div>
    <!-- Referência dos arquivos JS (JavaScript) -->
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
</body>
</html>